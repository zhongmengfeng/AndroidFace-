        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp" />

    <Button
        android:text="搜索"
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="match_parent"
